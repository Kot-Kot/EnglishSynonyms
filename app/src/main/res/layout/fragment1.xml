<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.kot.englishsynonyms.GameActivity">


    <android.support.constraint.Guideline
        android:id="@+id/guidelineH4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04"
        tools:layout_editor_absoluteY="21dp"
        tools:layout_editor_absoluteX="0dp" />


    <android.support.constraint.Guideline
        android:id="@+id/guidelineH60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"
        tools:layout_editor_absoluteY="358dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textViewForInfo1"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@color/colorMyTopPanel"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:text="1"

        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/guidelineH4"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textViewForInfo2"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/textViewForInfo2"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@color/colorMyTopPanel"
        android:gravity="right|center"
        android:paddingRight="10dp"
        android:text="2"

        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/guidelineH4"
        app:layout_constraintLeft_toRightOf="@+id/textViewForInfo1"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewForSynonym1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"

        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="txt"

        app:layout_constraintBottom_toTopOf="@+id/textViewForSynonym2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/guidelineH4"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/textViewForSynonym2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"

        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"

        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/textViewForSynonym3"

        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewForSynonym1"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/textViewForSynonym3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"

        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"

        android:gravity="center"

        app:layout_constraintBottom_toTopOf="@+id/textViewForSynonym4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewForSynonym2"

        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/textViewForSynonym4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"

        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"

        android:gravity="center"

        app:layout_constraintBottom_toTopOf="@+id/textViewForSynonym5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewForSynonym3"

        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/textViewForSynonym5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"

        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"

        android:gravity="center"

        app:layout_constraintBottom_toTopOf="@+id/textViewForSynonym6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewForSynonym4"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/textViewForSynonym6"
        android:layout_width="0dp"
        android:layout_height="0dp"


        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"


        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/guidelineH60"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewForSynonym5"
        app:layout_constraintVertical_weight="1" />


</android.support.constraint.ConstraintLayout>
